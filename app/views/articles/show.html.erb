<div class="container p-5 d-flex flex-column align-items-center justify-content-center">
  <h1 class="mb-5">RECIPE</h1>
  <div class="col-md-3 mb-4">
    <div class="card border-primary h-100" style="max-width: 18rem;">
      <div class="card-header d-flex align-items-center justify-content-center">RECIPE</div>
        <div class="card-body">
            <h5 class="card-title text-primary"><%= @article.title %></h5>
            <p class="card-text"><%= @article.content %></p>
          </div>
          <button class="btn btn-primary border rounded m-2"><%= link_to 'Back to Recipes', articles_path, class:"text-light text-decoration-none" %></button>
          <button class="btn btn-primary border rounded m-2"><%= link_to 'Edit Recipe', edit_article_path(@article), class:"text-light text-decoration-none" %></button>
          <%= link_to 'Delete Recipe', article_path(@article),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
              class: "btn btn-primary border rounded m-2 text-light text-decoration-none" %>
        </div>
    </div>
  </div>
</div>
